{
       "version": 2,
       "builds": [
         {
           "src": "build/**",
           "use": "@vercel/static"
         },
         {
           "src": "server.js",
           "use": "@vercel/node"
         }
       ],
       "routes": [
         {
           "src": "/tasks(.*)",
           "dest": "/server.js"
         },
         {
           "src": "/(.*)",
           "dest": "/build/$1"
         }
       ],
       "env": {
         "REACT_APP_API_URL": "/tasks"
       }
     }